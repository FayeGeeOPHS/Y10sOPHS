names = []
name1 = input("Enter a name you wish to use>>")
name2 = input("Enter another name you wish to use>>")
name3 = input("Enter another name you wish to use>>")
reply = input("do you want to submit another name. y or n>>")
names.append(name1)
names.append(name2)
names.append(name3)
while reply == "y":
     input("Enter one more name you wish to use>>")
     names.append(input)
     reply = input("would you like to add one more person")
     if reply == "n":
         print("the amount of people invited are..", len(names))
